<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:id="@+id/linearLayout1"
    	android:layout_marginTop="10px">
        <TextView 
        	android:text="Notice: Uno group recommend you to use email address as user name in order to well organize the system.
        	Thank you!!"
        	android:textColor="#3366FF" 
        	android:id="@+id/Register_Notice" 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content">
        	</TextView>
    	</LinearLayout>
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:id="@+id/linearLayout2"
    	android:orientation="vertical"
    	android:layout_marginTop="10px">
        <TextView 
        	android:text="Username:" 
        	android:id="@+id/Register_TextView1" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
        	</TextView>
        <EditText 
        	android:text="" 
        	android:id="@+id/register_username" 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content"
        	android:imeOptions="actionNext|flagNoEnterAction">
        	</EditText>
    	</LinearLayout>
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:id="@+id/linearLayout3"
    	android:orientation="vertical">
        <TextView 
        	android:text="Password:" 
        	android:id="@+id/Register_TextView2" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
        	</TextView>
        <EditText 
        	android:text="" 
        	android:id="@+id/register_password" 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content"
        	android:password="true"
        	android:imeOptions="actionNext|flagNoEnterAction">
        	</EditText>
    	</LinearLayout>
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:id="@+id/linearLayout4"
    	android:orientation="vertical">
    	<TextView 
        	android:text="Confirm Password:" 
        	android:id="@+id/Register_TextView3" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
        	</TextView>
        <EditText 
        	android:text="" 
        	android:id="@+id/register_confirm" 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content"
        	android:password="true"
        	android:imeOptions="actionDone|flagNoEnterAction">
        	</EditText>
    	</LinearLayout>
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent" 
    	android:id="@+id/linearLayout5"
    	android:orientation="horizontal">
        <Button 
        	android:text="Register" 
        	android:id="@+id/register_ok" 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10px">
        	</Button>
    	</LinearLayout>
</LinearLayout>
